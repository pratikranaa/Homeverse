{
  "kind": "collectionType",
  "collectionName": "blog_authors",
  "info": {
    "singularName": "blog-author",
    "pluralName": "blog-authors",
    "displayName": "Blog Author",
    "description": "Blog author content type for managing blog post authors"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "bio": {
      "type": "text",
      "maxLength": 1000
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "social_links": {
      "type": "json",
      "required": false
    },
    "blog_posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog-post.blog-post",
      "mappedBy": "author"
    }
  }
}
