{
  "name": "custom-backend",
  "version": "1.0.0",
  "description": "Custom Business + Content Backend - Node.js/Express/PostgreSQL service",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "migrate": "node src/db/migrate.js",
    "seed": "node src/db/seed.js",
    "db:setup": "npm run migrate && npm run seed",
    "db:verify": "node src/db/verify.js",
    "build": "bash scripts/build.sh",
    "deploy": "bash deploy.sh",
    "deploy:local": "bash deploy.sh --skip-ami",
    "ami:create": "bash scripts/create-ami.sh",
    "ami:update-template": "bash scripts/update-launch-template.sh",
    "asg:refresh": "bash scripts/trigger-asg-refresh.sh"
  },
  "keywords": ["express", "backend", "api"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "sequelize": "^6.35.2",
    "joi": "^17.11.0",
    "axios": "^1.6.2",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "pm2": "^5.3.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
